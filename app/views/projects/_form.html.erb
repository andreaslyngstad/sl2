<%= form_for(@project) do |f| %>
  <ul>
      <li><%= f.label :name %><%= f.text_field :name, :class => "required", :minlength => "2" %></li>
      <li><%= f.label :description %><%= f.text_area :description %></li>
      <li><%= f.label :due %><%= f.text_field :due, :value => date_format(@project.due), :class => "date required", :id => "date_project_#{@project.id}"  %></li>
      <li><%= f.label :customer_id %><%= f.select(:customer_id, current_firm.customers.map {|customer| [customer.name, customer.id]}, {:include_blank => 'None'})%></li>
      <li><%= f.submit 'Save', :class => 'submit', :id => "submit_project_edit" %></li>
  </ul>
<% end %>