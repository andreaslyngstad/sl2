<% content_for :help do %>
<div class="page_help">
	<div class="page_help_container">
		<%= t "help.projects_index_html" %>
	</div>
</div>
<% end %>	
<div class="index-view">
	<div class="list_header orange_bgr">
		
		<% if can? :archive, Project %>
		<%= link_to "Archived projects", archive_path, :id => "archive"%>
		<% end %>
		<% if can? :create, Project %>
		<a id="dialog_project" data-object="project">New project</a>
		<div id="dialog_project_form" class="dialog_form" title="Create new project" style="display:none;">
      <%= render 'new_form' %>
      </div>
      <% end %>
	    <div class="search">
	        <input type="text" placeholder="Search" name="search" AUTOCOMPLETE=OFF value="" title="search" id="id_search_list">
	    </div>
	</div>
	<div id="cus_pro_us_listing_container">
  <ul id="cus_pro_us_listing">
	<%= render :partial => "projects_index",  :collection => @projects, :as => :project  %>
  </ul>
  </div>
</div>