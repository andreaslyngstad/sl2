<ul>
	<% @milestones.each do |milestone|%>
	<% if milestone.due >= Date.today %>
	<li>
	  	<div class="row_milestone">
		  	<%= link_to milestone.goal, project_path(milestone.project).to_s + "/#tabs-2", :style => "color: green"%>
		  	<span class="milestone_due"><%=milestone.due%></span>
	  	</div> 
	  </li>
	  <% else %>
		<li>
	  	<div class="row_milestone">
		  	
		  	<%= link_to milestone.goal, project_path(milestone.project).to_s + "/#tabs-2", :style => "color: red"%>
		  	<span class="milestone_due"><%=milestone.due%></span>
	  	</div> 
	  </li>
	   <%end%>
	  <%end%>
</ul>