<div class="log_menu">
	<div class="add_some">
    <a id="dialog_employees" data-object="employee"><%= t('general.new') %> <%= t('activerecord.models.employee.one') %></a>
    <div id="dialog_employees_form" class="dialog_form" title="Create new employee" style="display:none;">  
      <%= form_for(Employee.new, :remote => true) do |f| %>
      <%= f.hidden_field :customer_id, value: @klass.id %>
      <li><%= f.label :name %><%= f.text_field :name, :class => "required", :minlength => "2"%></li>
      <li><%= f.label :phone %><%= f.text_field :phone %></li>
      <li><%= f.label :email %><%= f.text_field :email %></li>
      <li><%= f.submit ( t'save'), :class => 'submit', :id => "new_employee_submit" %></li>
      <% end %>
    </div>
  </div>
</div>
<div id="listing_employees">
  <div class="info" > 
  	<div class="name_todo info_head"><%= t('activerecord.attributes.employee.name' )%></div>
  	<div class="project_todo info_head"><%= t('activerecord.attributes.employee.phone') %></div>
  	<div class="user_todo info_head"><%= t('activerecord.attributes.employee.email') %></div>
  </div>
    <%= render @employees %>
</div>