<li class="tab_list" id="invoice_<%= invoice.id.to_s %>"> 
<div class="tab_list_text invoice_list">
	<% if invoice.customer.nil?%>
		<div class="invoice_customer"><%= link_to truncate(invoice.customer_all.name, :length => 80), invoice_path(invoice) %><span style="font-size:50%">(deleted)</span></div>
	<% else %>
		<div class="invoice_customer"><%= link_to truncate(invoice.customer.name, :length => 80), invoice_path(invoice) %></div>
	<% end %>
	<div class="status"><%= invoice.status_string %></div>
	<div class="invoice_number"><%= invoice.number_string %></div>
	<div class="invoice_amount" data-amount="<%= invoice.total %>"></div>
	<div class="invoice_dates"><%= date_format(invoice.date) %></div>
	<div class="invoice_links">
		<% case invoice.status  %>
			<% when 1 then %>
				<%= link_to (t'send'), sending_invoice_path(invoice), method: "post" %>
				<%= link_to (t"show"), invoice_path(invoice) %>
			<span class='open_invoices_update edit' id="invoice_update" data-id="<%= invoice.id %>" data-object="invoice" title="<%= t'edit' %> <%= t'activerecord.models.invoice.one' %>"><%= t'edit' %></span>
				<%= link_to (t"delete"), invoice, data: { confirm: ( t'are_you_sure?') }, :title => (t"delete"), :method => :delete, :class => "delete_invoice", :remote => true %>
			<% when 2 then %>
			<%= link_to "show", invoice_path(invoice) %>		
		<% end %>
	</div>
  </div>
  <div class="dialog_form dialog_invoice_form" id="invoice_update_<%= invoice.id %>_form" title="<%= t'helpers.submit.update', model: Invoice.model_name.human %>" style="display:none;"></div>
</li>
