<li class="tab_list_invoice" id="invoice_<%= invoice.id.to_s %>"> 
<div class="tab_list_text invoice_list">
	<% invoice.due_today_or_overdue %>
	<div class="status" style="color:<%= invoice.status_string[0] %>"><%= invoice.status_string[1] %></div>
	<div class="invoice_dates"><%= date_format(invoice.date) %></div>
	<div class="invoice_number"><%= invoice.number_string %></div>
	<% if invoice.customer.nil?%>
		<div class="invoice_customer"><%= link_to truncate(invoice.customer_all.name, :length => 80), invoice_path(invoice) %><span style="font-size:50%">(deleted)</span></div>
	<% else %>
		<div class="invoice_customer"><%= link_to truncate(invoice.customer.name, :length => 80), invoice_path(invoice) %></div>
	<% end %>
	
	
	<div class="invoice_amount" data-amount="<%= invoice.total %>"></div>
	<div class="invoice_links">
		<span class='download_invoice edit' data-id="<%= invoice.id %>"  title="<%= t'download' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'download' %></span>
		<% case invoice.status  %>
			<% when 1 then %>
			<% if !invoice.customer.email.blank? %>
			<span class='quick_send_invoice edit' data-id="<%= invoice.id %>"  title="<%= t'send' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'quicksend' %></span>
			<% end %>
				<span class='slow_sending_invoices edit' id="sending_invoice" data-id="<%= invoice.id %>" data-object="invoice" title="<%= t'send' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'send' %></span>
				<span class='open_invoices_update edit' id="invoice_update" data-id="<%= invoice.id %>" data-object="invoice" title="<%= t'edit' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'edit' %></span>
				<%= link_to ('|' + (t"delete")), invoice, data: { confirm: ( t'are_you_sure?') }, :title => (t"delete"), :method => :delete, :class => "delete_invoice", :remote => true %>
			<% when 2 then %>	
			<span class='slow_sending_invoices edit' id="sending_invoice" data-id="<%= invoice.id %>" data-object="invoice" title="<%= t'send' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'send' %></span>
			
			<span class='credit_invoice edit' data-id="<%= invoice.id %>"  title="<%= t'credit_note' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'credit_note' %></span>
			<span class='invoice_paid edit' data-id="<%= invoice.id %>"  title="<%= t'activerecord.models.invoice.one' %> <%= t'paid' %>">|<%= t'paid' %></span>
			<% when 3 then %>	
			<span class='credit_invoice edit' data-id="<%= invoice.id %>"  title="<%= t'credit_note' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'credit_note' %></span>
			<span class='remind_invoice edit' id="sending_invoice" data-id="<%= invoice.id %>"  title="<%= t'send_reminder' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'send_reminder' %></span>
			<span class='invoice_paid edit' data-id="<%= invoice.id %>"  title="<%= t'activerecord.models.invoice.one' %> <%= t'paid' %>">|<%= t'paid' %></span>
			<% when 4 then %>	
			<span class='credit_invoice edit' data-id="<%= invoice.id %>"  title="<%= t'credit_note' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'credit_note' %></span>
			<span class='remind_invoice edit' id="sending_invoice" data-id="<%= invoice.id %>"  title="<%= t'send_reminder' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'send_reminder' %></span>
			<span class='invoice_paid edit' data-id="<%= invoice.id %>"  title="<%= t'activerecord.models.invoice.one' %> <%= t'paid' %>">|<%= t'paid' %></span>
			<% when 5 then %>
			<span class='slow_sending_invoices edit' id="sending_invoice" data-id="<%= invoice.id %>" data-object="invoice" title="<%= t'edppaid?aid?it' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'send_reminder' %></span>
			<span class='credit_invoice edit' data-id="<%= invoice.id %>"  title="<%= t'credit_note' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'credit_note' %></span>
			<span class='invoice_paid edit' data-id="<%= invoice.id %>"  title="<%= t'activerecord.models.invoice.one' %> <%= t'paid' %>">|<%= t'paid' %></span>
			<% when 6 then %>
			<span class='slow_sending_invoices edit' id="sending_invoice" data-id="<%= invoice.id %>" data-object="invoice" title="<%= t'send' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'send' %></span>
			<span class='invoice_paid edit' data-id="<%= invoice.id %>"  title="<%= t'activerecord.models.invoice.one' %> <%= t'paid' %>">|<%= t'not_paid' %></span>
			<% when 7 then %>
			<span class='slow_sending_invoices edit' id="sending_invoice" data-id="<%= invoice.id %>" data-object="invoice" title="<%= t'send' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'send' %></span>
			<% when 8 then %>
			<span class='slow_sending_invoices edit' id="sending_invoice" data-id="<%= invoice.id %>" data-object="invoice" title="<%= t'send' %> <%= t'activerecord.models.invoice.one' %>">|<%= t'send' %></span>
		<% end %>
	</div>
  </div>
  <div class="dialog_form dialog_invoice_form" id="invoice_update_<%= invoice.id %>_form" title="<%= t'helpers.submit.update', model: Invoice.model_name.human %>" style="display:none;"></div>
  <div class="dialog_form dialog_sending_invoice_form" id="sending_invoice_<%= invoice.id %>_form" title="<%= t'helpers.submit.send', model: Invoice.model_name.human %>" style="display:none;"></div>
  <div class="dialog_form dialog_invoice_form" id="credit_note_<%= invoice.id %>_form" title="<%= t'general.create_new' %> <%= t'economic.credit_note' %>" style="display:none;"></div>
</li>