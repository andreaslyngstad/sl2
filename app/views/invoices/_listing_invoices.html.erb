<div class="log_menu">
	<span class="add_some">  
		<% if can? :manage, @klass %>
		<a id="dialog_invoices" data-object="invoice">New invoice</a>
		<% end %>
	</span>
	    
	<div class="range" >	   
		<%= form_tag('/invoice_range', :id => "invoices_range_form", :remote => true, :method => :get) do -%>
		<%= hidden_field_tag "url", @klass ? @klass.class : "index"  %>
		<%= hidden_field_tag "id", @klass ? @klass.id : "index"%>
		<div id="range_date_fields">
		  	<%= text_field_tag 'from', date_format(time_zone_now - 1.week), :class => "range_date"%>
			<%= text_field_tag 'to',date_format(time_zone_now), :class => "range_date"  %>
		</div>
		<% end %>
	</div>
	<div class="logs_pr_date">
		<select class="small_selector" id="invoices_pr_date_select" data-url="<%= @klass ? @klass.class : "index" %>" data-id="<%= @klass ? @klass.id : "index" %>">
			<option value="to_day">To day</option>
			<option value="this_week">This week</option>
			<option value="this_month">This month</option>
			<option value="this_year">This year</option>   
			<option value="yesterday">Yesterday</option>
			<option value="last_week">Last week</option>
			<option value="last_month">Last month</option>
			<option value="last_year">Last year</option>   
		</select>
	</div> 
</div>
<div id="invoices_list">
	<% if can? :manage, @klass %>
	<div id="dialog_invoice_form" class="dialog_form" title="Create new invoice" style="display:none;">	
	    <%= form_for @klass.invoices.build, :remote => true do |f| %>
	  <% end %> 
	<% end %>
	</div>
	<div class="info"> 	
		
	</div>
	<div id="not_done_tasks">
		<%= render @logs %>
	</div>
	
</div>
