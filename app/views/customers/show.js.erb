$(".flash_notice").empty();
$( "#tabs" ).tabs({ cache: true },
  {spinner: '<%= image_tag "spinner2.gif"%>'},
   {
      ajaxOptions: {
        
        error: function( xhr, status, index, anchor ) {
          $( anchor.hash ).html(
            "Couldn't load this tab. We'll try to fix this as soon as possible. ");
        }
      }
    });

$('.spinning').hide();