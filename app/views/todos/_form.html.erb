 <%= form_for todo do |f| %>
 <ul>
 	<li><%= f.label :name %><%= f.text_area :name, :class => "required", :minlength => "2" %></li>
 	<li><%= f.label :Priority %>
	  	<%= f.radio_button :prior, 1 %><%= label :role, 'Normal' %>
	  	<%= f.radio_button :prior, 2 %><%= label :role, 'Middle' %>
	  	<%= f.radio_button :prior, 3 %><%= label :role, 'High' %>
	</li>
	<li><%= f.label :user_id %>
		<select class="searchableTaskCustomer" name="todo[user_id]">
    		<option value="">Select user</option>
          	<% current_firm.users.each do |user| %>
          	<option value="<%=user.id.to_i%>"<%if todo.user == user%> selected="<%=user.id.to_i%>"<%end%>>
          		<%= user.name %></option>
          	<% end %>
         </select> 
    </li>
    <li><%= f.label :customer_id%>
		<select class="searchableTaskCustomer" name="todo[customer_id]">
			<option value="">Select customer</option>
		  	<% current_firm.customers.each do |customer| %>
		  	<option value="<%=customer.id.to_i%>"<%if todo.customer == customer%> selected="<%=customer.id.to_i%>"<%end%>>
		  		<%= customer.name %></option>
		  	<% end %>
		</select> 
    </li>
    <li><%= f.label :project_id %>
       	<select class="searchableTaskCustomer" name="todo[project_id]">
       		<option value="">Select project</option>
	          	<% current_firm.projects.each do |project| %>
	          	<option value="<%=project.id.to_i%>"<%if todo.project == project%> selected="<%=project.id.to_i%>"<%end%>>
	          		<%= project.name %>
	          		</option>
	          	<% end %>
	    </select>
	 </li>
       <li><%= f.label :due %><%= f.text_field :due, :value => todo.due.strftime("%Y-%m-%d"), :id => "date_todo_#{todo.id}" %></li>
       <li><%= f.submit "Save", :class => 'submit' %></li>
 </ul>
  <% end %>  