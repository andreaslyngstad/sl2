      <div class="signup signup_firm hide login_form">
        <h2 style="margin-left:20px;">Log in</h2>
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div class="signup-form-field"><%= f.label :email %><%= f.text_field :email, id: 'user_email_popup' %></div>
          <div class="signup-form-field"><%= f.label :password %><%= f.password_field :password, id: 'user_password_popup' %></div>
          <% if devise_mapping.rememberable? -%>
              <div class="signup-form-field checkbox"><%= f.label :remember_me %><%= f.check_box :remember_me, :id => "check" %> </div>
          <% end -%>
          <div class="signup-form-field"><%= f.submit "Sign in", :class => "submit" %></div>
        <% end %>
        <div class="devise_links">
        <%= render :partial => "devise/links" %>
