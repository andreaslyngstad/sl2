
<div id="header" style="background-color:<%= current_firm.background ? current_firm.background : "black"%> ; color: <%= current_firm.color ? current_firm.color : "white"%>; ">
	<div class="common_header">
		<div id="firm_logo_view">
			<% if !current_firm.logo_file_name.nil? %>
			<%= image_tag current_firm.logo.url( :original)%>
			<% end %>
		</div>
		<div id="user_info_header">
		  <%= current_firm.name %><br /> 
		 <span style="font-size:12px;"> <%= current_user.name %>
		  <%= Time.now.strftime('%d.%m.%y')%>|<span class="jclock"></span></span> 
		  
		</div>
  	</div>
  	<div class="messages">
		<span class="spinning" style="display:none;"></span>
		<div id="flash_messages">	
			<span class="flash_notice"><%= flash[:notice] %></span>
			<span class="flash_error"><%= flash[:error] %></span>		
		</div>
		 <div id="user_nav_header">
	<%= link_to "Sign out", sign_out_path %>
	 	<span class="display_help" title="View page help">?</span>	
	 		
	</div>
	
	</div>
</div>
