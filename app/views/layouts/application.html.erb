<html xmlns="http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<head>
  <title>Squadlink</title>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <meta name="google-site-verification" content="ynxbxSS6ZtwG1WFHyqmWZ5ELrgNRADdhdEFebN11h5k" />

  <%= stylesheet_link_tag  'application' %>

   <%= csrf_meta_tag %>
   <link rel="shortcut icon" href="/favicon.png" />
   
<%= yield :head %>



</head>
<body>
  
 <div id="main">
<%= render "layouts/header" %>

<div id="wrapper">
<div id="all_container">
	<%= yield(:help)%>


  

<div id="navigation" class="hor_scroll">
	<ul>
      <li class="navigation" id="home_navi" pos="0"><a href="/statistics">Home</a></li>
  	  <li class="navigation" id="logs_navi" pos="75"><a href="/logs">Logs</a></li>
  	  <li class="navigation" id="projects_navi" pos="150"><a href="/projects">Projects</a></li>
	  <li class="navigation" id="customers_navi" pos="225"><a href="/customers">Customers</a></li>
	  <li class="navigation" id="users_navi" pos="300"><a href="/users">Users</a></li>
    </ul>
</div>


<div id="main_container">
<%= yield %>
</div>	
<div class="far_right_container_min">
  Squaders min <div class="open_chatbox">-</div>
</div>
<div class="far_right_container" >
	<div class="far_right_container_max">
  Squaders <div class="open_chatbox">-</div>
</div>
<div id="accordion">
	<h3>Users</h3>
  	<div id="signed_in_users">
	  	<ul>
		  <% current_firm.users.each do |user|%>
		  <% if !user.current_sign_in_at.nil?%>
		  <li style="color:green"><div class="row_user"><%= image(user, "image32") %><div class="user_row_name"><%= user.name %></div></div> </li>
		  <%else%>
		  <li style="color:red"><div class="row_user"><%= image(user, "image32") %><div class="user_row_name"><%= user.name %></div></div> </li>
		  <%end%>
		  <%end%>
	  	</ul>
	</div>
	<h4 class="task_accordion">Tasks</h4>
	<div id="upcomming_tasks">
		<div id="ajax-loader" style="margin: 0 auto;width:200px">
		  	<%= image_tag("ajax-loader.gif")%>
		</div>
	
		
	</div>
	<h3 class="milestone_accordion">Milestones</h3>
	<div id="upcomming_milestones">
		<div id="ajax-loader" style="margin: 0 auto;width:200px">
		<%= image_tag("ajax-loader.gif")%>
	  </div>
	</div>
</div>
  

</div>

</div>

</div>
</div>

<div id="footer">
<p>squadlink</p>

</div>


</body>
<%= javascript_include_tag "application"%>
</html>
